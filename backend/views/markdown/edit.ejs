<!doctype html>
<html lang="en" class="fill">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Markdown Editor</title>

    <link rel="stylesheet" href="/modules/bootstrap/css/bootstrap.min.css" type="text/css" media="all" charset="utf-8">
    <link rel="stylesheet" href="/modules/codemirror/lib/codemirror.css" type="text/css" media="all" charset="utf-8">
    <link rel="stylesheet" href="/modules/fontawesome/css/font-awesome.min.css" type="text/css" media="all" charset="utf-8">

    <!-- dynamic theme css, modified by /js/editor.js -->
    <link id="codemirror-theme" rel="stylesheet" href="/ss/codemirror-empty-theme.css" type="text/css" media="all" charset="utf-8">
    <link id="highlight-theme" rel="stylesheet" href="/modules/highlight/styles/default.css" type="text/css" media="all" charset="utf-8">

    <link rel="stylesheet" href="/ss/style.css" type="text/css" media="all" charset="utf-8">
  </head>
  <body class="fill">
    <div id="loading">loading ...</div>
    <div id="main" class="container-fluid fill hide">
      <div id="options" class="row">
        <div class="col-xs-12">
          <form id ="options-form" class="form-inline">
            <div class="form-group">
              <label for="select-keymap">keymap</label>
              <select id="select-keymap" class="form-control" name="option-keymap">
                <option value="default" class="active" selected="selected">default</option>
                <% keymaps.forEach(function(value) { %><option value="<%= value %>"><%= value %></option>
                <% }); %>
              </select>

              <label for="select-theme">theme</label>
              <select id="select-theme" class="form-control" name="option-theme">
                <option value="default" class="active" selected="selected">default</option>
                <% themes.forEach(function(value) { %><option value="<%= value %>"><%= value %></option>
                <% }); %>
              </select>

              <label for="select-mode">mode</label>
              <select id="select-mode" class="form-control" name="option-mode">
                <% modes.forEach(function(value) { %><option value="<%= value %>"><%= value %></option>
                <% }); %>
              </select>

              <label for="select-hl-theme">highlight theme</label>
              <select id="select-hl-theme" class="form-control" name="option-hl-theme">
                <% hlthemes.forEach(function(value) { %><option value="<%= value %>"><%= value %></option>
                <% }); %>
              </select>
              <button id="save-button">Save</button>
              <button id="copy-button" data-toggle="tooltip" title="copy to clipboard">
                  <i class="fa fa-clipboard" aria-hidden="true"></i>
              </button>
            </div>
          </form>
          <hr />
        </div>
      </div>

      <div id="main" class="row">
        <div id="editorwrap" class="col-xs-12 col-md-6 col-lg-6 fill">
          <textarea id="editor" class="fill"><%= initialData %></textarea>
        </div>
        <div id="previewwrap" class="col-xs-12 col-md-6 col-lg-6 fill">
          <div id="preview"> </div>
        </div>
      </div>
    </div>

    <script src="/modules/jquery/dist/jquery.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="/modules/bootstrap/js/bootstrap.min.js" type="text/javascript" charset="utf-8"></script>

    <script src="/modules/codemirror/lib/codemirror.js" type="text/javascript" charset="utf-8"></script>
    <script src="/modules/codemirror/addon/selection/active-line.js" type="text/javascript" charset="utf-8"></script>
    <script src="/modules/codemirror/addon/mode/loadmode.js" type="text/javascript" charset="utf-8"></script>
    <script src="/modules/codemirror/addon/mode/simple.js" type="text/javascript" charset="utf-8"></script>
    <script src="/modules/codemirror/addon/mode/overlay.js" type="text/javascript" charset="utf-8"></script>

    <script src="/js/editor.js" type="text/javascript" charset="utf-8"></script>
  </body>
</html>



